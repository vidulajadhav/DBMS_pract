-- 1. Insert values into Department
INSERT INTO Department VALUES (1, 'Computer Science');
INSERT INTO Department VALUES (2, 'Mechanical');

-- 2. Insert values into Student using sequence
INSERT INTO Student VALUES (NEXTVAL('student_seq'), 'Amit', 20, 1, 85);
INSERT INTO Student VALUES (NEXTVAL('student_seq'), 'Riya', 19, 1, 90);
INSERT INTO Student VALUES (NEXTVAL('student_seq'), 'Rahul', 22, 2, 75);

-- 3. Select all records
SELECT * FROM Student;

-- 4. Select students with marks > 80
SELECT student_name, marks FROM Student WHERE marks > 80;

-- 5. Update marks of a student
UPDATE Student SET marks = 95 WHERE student_name = 'Riya';

-- 6. Delete students below 18 years
DELETE FROM Student WHERE age < 18;

-- 7. Count number of students in each department
SELECT dept_id, COUNT(*) AS total_students FROM Student GROUP BY dept_id;

-- 8. Display average marks by department
SELECT d.dept_name, AVG(s.marks) AS avg_marks
FROM Student s JOIN Department d ON s.dept_id = d.dept_id
GROUP BY d.dept_name;

-- 9. Use set operator: union (combine departments and student names)
SELECT dept_name AS name FROM Department
UNION
SELECT student_name FROM Student;

-- 10. Display all students in descending order of marks
SELECT student_name, marks FROM Student ORDER BY marks DESC;
